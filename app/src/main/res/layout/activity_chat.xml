<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lin.boylove.activity.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="@dimen/size_icon_small"
            android:layout_height="@dimen/size_icon_small"
            android:padding="@dimen/padding_big"
            android:src="@drawable/ic_back_arrow_white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_profile"
                android:layout_width="@dimen/size_icon_small"
                android:layout_height="@dimen/size_icon_small"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_profile_avatar" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/civ_profile"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:gravity="center_vertical"
                    android:text="Active"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_message_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcv_message_chat"
        android:orientation="horizontal">

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_edt_chat"
            android:padding="@dimen/padding_small" />

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="@dimen/size_icon_tiny"
            android:layout_height="@dimen/size_icon_tiny"
            android:layout_gravity="center"
            android:background="@color/app_color"
            android:padding="@dimen/padding_big"
            android:src="@drawable/ic_sent_white" />
    </LinearLayout>
</LinearLayout>
