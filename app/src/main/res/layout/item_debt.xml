<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.pkmmte.view.CircularImageView
        android:id="@+id/imageView"
        android:src="@drawable/ic_email"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_debt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc def dsdovddfdfddhosfhsokcxkckxckxnfhosf"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_debt_content"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="12/04/2017"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="320840"
                android:textColor="@color/app_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imv_finance_type"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/ic_red_point" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>