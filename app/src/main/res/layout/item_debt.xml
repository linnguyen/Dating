<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recycler_item_margin_bottom"
        android:layout_marginLeft="@dimen/recycler_item_margin"
        android:layout_marginRight="@dimen/recycler_item_margin"
        android:layout_marginTop="@dimen/recycler_item_margin_top"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_debt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abc def dsdifidhfihfisovddhosf"
                    android:textColor="#222"
                    android:textSize="16sp" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_date_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="12/04/2017"
                    android:textColor="#888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="682649264" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_debt_type"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_red_point" />

            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>